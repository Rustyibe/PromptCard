{
  "manifest_version": 3,
  "name": "AI 提示词管理器",
  "version": "1.0.0",
  "description": "管理和快速访问AI提示词",
  "permissions": ["storage", "sidePanel"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI 提示词管理器"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "commands": {
    "toggle-prompt-manager": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "MacCtrl+Shift+V"
      },
      "description": "切换AI提示词管理器"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  }
}
